<h1>Contact page here</h1>

<p>
<%= link_to "Send a message", '#', :class => "toggler_message" %>
</p>

<section class="togglee_message hidden">
  <div class="form-inputs">
  <%= form_for [@message], remote: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
      </br>
    <%= f.label :contact %>
    <%= f.text_field :contact %>
      </br>
    <%= f.label :body, 'Message' %>
    <%= f.text_area :body, size: "5x5" %>
      </br>
    <%= f.submit "Send Message" %>
  <% end %>
  </div>
</section>
